<%= form_for([@ward, @complaint]) do |f| %>
  <% if @complaint.errors.any? %>
    <div class="alert alert-error">
      <h5>Oops! You must enter a complaint before submitting below!</h5>


     
    </div>
  <% end %>

  <div class="field">
   
		<%= f.label :complaint_text %><br />
		 
    <%= f.text_area :complaint_text, :rows => "10" %>
  </div>

  <div class="form-actions">
	
    <%= f.submit %>
  </div>
<% end %>

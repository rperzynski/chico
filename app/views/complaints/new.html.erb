<div class="alert alert-info">
  <h2>Ward Number <%= @ward.ward_num %> </h2>
</div>

<% if user_signed_in? %>
<h4>Welcome to the Complaint Department</h4>
  <%= render 'form' %>
<% else %>
  <%= link_to "In order to make a complaint, you must connect With Twitter", "/auth/twitter" %>
<% end %>




<ol class="breadcrumb">
   <li><%= link_to 'Back', ward_complaints_path(@ward) %></li>
  <li><%= link_to 'View All Wards', wards_path %></li>
  <% if user_signed_in? %>
    <li><%= link_to "Log out", logout_path, method: :delete %></li>
  <% end %>
</ol>


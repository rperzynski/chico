<%= form_for(@ward) do |f| %>
  <% if @ward.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ward.errors.count, "error") %> prohibited this ward from being saved:</h2>

      <ul>
      <% @ward.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label : %><br />
    <%= f.text_field :ward_num %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
